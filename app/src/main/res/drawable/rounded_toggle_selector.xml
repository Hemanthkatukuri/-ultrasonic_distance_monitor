<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C"/> <!-- ON color -->
            <corners android:radius="30dp"/>
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
            <stroke android:width="2dp" android:color="#2E7D32"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F"/> <!-- OFF color -->
            <corners android:radius="30dp"/>
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
            <stroke android:width="2dp" android:color="#B71C1C"/>
        </shape>
    </item>
</selector>