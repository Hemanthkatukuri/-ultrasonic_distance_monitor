<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1a1a2e"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Simulator"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADJUST DISTANCE (cm)"
        android:textColor="#b8b8b8"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp" />

    <SeekBar
        android:id="@+id/distance_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:max="100"
        android:progress="50"
        android:progressTint="#4CAF50"
        android:thumbTint="#4CAF50" />

    <TextView
        android:id="@+id/distance_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 cm (âœ… Safe)"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <Button
        android:id="@+id/publish_button"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:text="PUBLISH DISTANCE"
        android:textSize="16sp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This will publish the distance value to the MQTT topic 'ultrasonic/distance'"
        android:textColor="#888888"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

</LinearLayout> 